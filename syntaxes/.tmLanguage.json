{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LPG",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#blockcomment"
		},
		{
			"include": "#comment"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.lpg",
				"match": "\\b(let|enum|struct|match|case|loop|break|return|mutable|interface|reference|new)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.lpg",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.lpg",
					"match": "\\\\."
				}
			]
		},
		"blockcomment":{
			"patterns": [{
				"name": "comment.block.control.lpg",
				"begin": "/\\*",
				"end": "\\*/"
			}]
		},
		"comment":{
			"patterns": [{
				"name": "comment.single.control.lpg",
				"begin": "//",
				"end": "\n"
			}]
		}
	},
	"scopeName": "source.lpg"
}